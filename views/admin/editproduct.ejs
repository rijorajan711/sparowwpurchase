
    <div class="screen-overlay"></div>
    
    <main class="main-wrap">
        
        <section class="content-main">
           
                        <form  action="/admin/editproduct/<%= productdetails._id %>"  method="post" enctype="multipart/form-data" >

                            <div class="row">
                                <div class="col-6">
                                    <div class="content-header">
                                        <h2 class="content-title">Edit Product</h2> 
                                        <button type="submit" class="btn btn-md rounded font-sm hover-up">Submit</button>
                                    </div> 
                                </div>
                            </div>
                            <div class="row">

                                <div class="col-lg-6">
                                    <div class="card mb-4">
                                        <div class="card-body">
                                            <div class="row">
                                                <div class="col-md-3">
                                                    <h6>1. General info</h6>
                                                </div>
                                                
                                                <div class="col-md-9">
                                                     <div class="mb-4">
                                                        <label class="form-label">Product title</label>
                                                        <input type="text" placeholder="Type here"  name="title" class="form-control" value="<%= productdetails.title %>">
                                                        <input type="text"    name="id" class="form-control d-none" value="<%= productdetails._id %>">
                                                    </div> 
                                                    <div class="mb-4">
                                                        <label class="form-label">Description</label>
                                                        <textarea placeholder="Type here" name="description" class="form-control" rows="4" ><%= productdetails.description %></textarea>
                                                    </div>
                                                    <div class="mb-4">
                                                        <label class="form-label">Category</label>
                                                        <select class="form-select" name="category" >
                                                            <option value="Iphone"> Iphone </option>
                                                            <option value="Watches"> Watches </option>
                                                            <option value="ipad">ipad</option>
                                                        </select>
                                                    </div>
                                                </div> <!-- col.// -->
                                            </div> <!-- row.// -->
                                            <hr class="mb-4 mt-0">
                                            <div class="row">
                                                <div class="col-md-3">
                                                    <h6>2. Pricing</h6>
                                                </div>
                                                <div class="col-md-9">
                                                    <div class="mb-4">
                                                        <label class="form-label">Cost in Rupees</label>
                                                        <input type="text" placeholder="rs00.0" value="<%= productdetails.price %>" name="price" class="form-control">
                                                    </div>
                                                </div> <!-- col.// -->
                                            </div> 
                                            <hr class="mb-4 mt-0">
                                            <div class="row">
                                                <div class="col-md-3">
                                                    <h6>3.Quantity</h6>
                                                </div>
                                                <div class="col-md-9">
                                                    <div class="mb-4">
                                                        <label class="form-label">number</label>
                                                        <input type="number" placeholder="" name="quantity" class="form-control" value="<%= productdetails.quantity %>">
                                                    </div>
                                                </div> <!-- col.// -->
                                            </div>
                                            <hr class="mb-4 mt-0">
                                            <div class="row">
                                                <div class="col-md-3">
                                                    <h6>4.Soke staus</h6>
                                                </div>
                                                <div class="col-md-9">
                                                    <div class="mb-4">
                                                       
                                                        <input type="text" placeholder="" name="stoke" class="form-control"  value="<%= productdetails.stoke %>">
                                                    </div>
                                                </div> <!-- col.// -->
                                            </div> <!-- row.// -->
                                            <hr class="mb-4 mt-0">
                                            <!-- row.// -->
                                            <hr class="mb-4 mt-0">
                                            <div class="row">
                                                <div class="col-md-3">
                                                    <h6>5. Media</h6>
                                                </div>
                                                <div class="col-md-9">
                                                    <div class="mb-4">
                                                        <label class="form-label">Images</label>
                                                        <input class="form-control" name="images" type="file" id="imageurl"  multiple>
                                                    </div>
                                                </div>  
                                           
                                            
                                        </div>
                                    </div>
                                </div>
                            </div>
                            </div>
                        </form>
                        
        </section> 
        <footer class="main-footer font-xs">
            <div class="row pb-30 pt-15">
                <div class="col-sm-6">
                    <script>
                    document.write(new Date().getFullYear())
                    document.getElementById("imageurl").defaultValue = "hai";
                    </script> Â©, Evara - HTML Ecommerce Template .
                </div>
                <div class="col-sm-6">
                    <div class="text-sm-end">
                        All rights reserved
                    </div>
                </div>
            </div>
        </footer>
    </main>
    



